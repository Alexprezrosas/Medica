<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medica2.Farmacia.Materiales"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="Medica2.Farmacia.Materiales.ConsultaMaterial"
        mc:Ignorable="d"
        Title="ConsultaMaterial" Height="294.878" Width="567.073">
    <Grid>

        <telerik:RadGridView Name="MostrarMateriales"  HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="541" Height="154" ValidationType="DataAnnotations" AutoGenerateColumns="False" SelectedCellsChanged="MostrarMateriales_SelectedCellsChanged">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding ID_CATALOGO_MATERIAL}" Header="Id" PreviewTextInput="validarLetras" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding NOMBRE}" Header="Material" PreviewTextInput="validarLetras" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding COMENTARIO}" Header="Comentario" PreviewTextInput="validarLetras"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding COD_BARRAS}" Header="Codigo de Barras" PreviewTextInput="validarNumeros"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding CANTIDAD}" Header="Cantidad" PreviewTextInput="validarNumeros"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding COSTO}" Header="Costo"  KeyDown="validarDecimal"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding FECHA_CREACION}"   Header="Fecha de Creacion"  />
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="219,224,0,0" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click"/>

    </Grid>
</Window>
